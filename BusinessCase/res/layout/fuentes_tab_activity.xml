<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
  >

     <!--   <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar_fuentes"
        style="@style/ActionBar"
        />-->

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="#828a8f"
              android:padding="10dp" >

            <TextView
                android:id="@+id/tv_fuentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/backbtn10"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_btn" />

            <Button
                android:id="@+id/homebtn10"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home_btn" />
            
       </RelativeLayout>
   
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" 
    android:background="#1d3767">
    
    <Button
        android:id="@+id/btn_fuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_button"
        android:text="@string/btn_save"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/action_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/help_btn" />

    <ImageView
        android:id="@+id/imgBtn_funtes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/action_help"
        android:src="@drawable/take_btn" />
     
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    
     <EditText
        android:id="@+id/etSortDesc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1"
        android:ems="10"
        android:inputType="textMultiLine|textCapSentences"
      	android:lines="4"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="4dp"
        >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etSortDesc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="2"
        android:layout_marginTop="5dp"
       	android:background="@drawable/bg_edittext"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="4"
        android:paddingLeft="4dp"
	/>

    <EditText
        android:id="@+id/etSortDesc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="3"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:inputType="textMultiLine|textCapSentences"
      	android:lines="4"
      	android:paddingLeft="4dp"/>
        

    <EditText
        android:id="@+id/etSortDesc4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
      	android:hint="4"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="4"
        android:paddingLeft="4dp"/>
</LinearLayout>
</ScrollView>
 
</LinearLayout>