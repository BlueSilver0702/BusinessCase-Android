        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="textMultiLine|textCapSentences"
        android:lines="3"
        android:paddingLeft="4dp"
        android:background="@drawable/bg_edittext"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_sup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:textColor="#818A8F"
        android:visibility="gone"/>
    <TextView
          android:id="@+id/tv_desc_short3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/desc_short"
          android:textColor="#000000"
          android:visibility="gone"
          android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/et_sup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="textMultiLine|textCapSentences"
        android:lines="2"
        android:visibility="gone"
        android:paddingLeft="4dp"
        android:background="@drawable/bg_edittext"/>
     <TextView
          android:id="@+id/tv_desc_larga3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/desc_long"
          android:textColor="#000000"
          android:visibility="gone"
          android:textAppearance="?android:attr/textAppearanceMedium" />
      

    <EditText
        android:id="@+id/et_sup_larga3"
        android:layout_width="match_parent"
